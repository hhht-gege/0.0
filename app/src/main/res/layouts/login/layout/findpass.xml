<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login.FindpassActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:gravity="center"/>


    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/find_user"
            android:layout_width="230dp"
            android:layout_height="84dp"
            android:layout_marginLeft="20dp"
            android:hint="要找回的账号" />
        <Button
            android:id="@+id/find_button_yan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginRight="20dp"
            android:onClick="send"
            android:text="发送验证码"/>
    </LinearLayout>

    <EditText
        android:id="@+id/find_newpassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="新密码"/>


    <EditText
        android:id="@+id/find_code"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="验证码"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginHorizontal="20dp"
        android:text="验证码自动发送到注册时候绑定的邮箱里"/>

    <Button
        android:id="@+id/find_button_ok"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:text="确定"
        android:onClick="ok"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content" />

</LinearLayout>
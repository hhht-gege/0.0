<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/anim_show_Chead"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:text="修改牲畜头像"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#444444"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/anim_show_Cmessage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:text="修改牲畜基本信息"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#444444"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anim_show_Chead"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/anim_show_Cphoto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:text="上传相册"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#444444"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anim_show_Cmessage"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/anim_show_dismiss"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:text="取消"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#444444"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anim_show_Cphoto"/>

</androidx.constraintlayout.widget.ConstraintLayout>
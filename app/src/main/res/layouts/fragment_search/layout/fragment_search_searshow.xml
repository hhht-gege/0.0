<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <competition.Utils.WebSocket.CircleImageView
        android:id="@+id/search_near_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/search_near_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称:有益菌酸奶"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/search_near_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/search_near_kind"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/search_near_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="种类:大黄"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/search_near_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_near_name"/>

    <View
        android:id="@+id/near_line1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_near_name" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/near_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/near_intro"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="12sp"
        android:elevation="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/introduction"
        app:layout_constraintTop_toTopOf="@id/near_line1"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="牲畜相册"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/near_intro"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/near_line2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="45dp"
        android:background="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/near_intro"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/near_line2"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nearshow_imag1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/rectangle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nearshow_imag2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nearshow_imag3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nearshow_imag4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nearshow_imag5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>